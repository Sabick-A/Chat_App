<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat App</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <h1>All Chats</h1>
    <form action="/chats/new">
        <button>Create New Chat</button>
    </form>
    <%for(chat of chats){%>
    <div class="chats">
            <p>From : <%= chat.from %></p>
            <div class="msg">
            <p>Message : <%= chat.msg %></p>
            </div>
            <p>Sent By: <%= chat.to %></p>
            <p>Created At: <%= chat.created_at.toString().split(" ")[4]%> <%= chat.created_at.toString().split(" ").slice(1,4).join(" ")%></p>
            <p>Updated At: <%= chat.updated_at.toString().split(" ")[4]%> <%= chat.updated_at.toString().split(" ").slice(1,4).join(" ")%></p>      
            <form action="/chats/<%= chat._id %>/edit">
                <button>Edit</button>
            </form>
            <form method="post" action="/chats/<%= chat._id %>?_method=DELETE">
                <button>Delete</button>
            </form>
        </div>
     <%}%>
</body>
</html>

